<div class="text-white">
<%= simple_form_for(trip) do |f| %>
  <%= f.input :description, label: "Trip title" %>
  <%= f.input :destination, label: "Where to meet" %>
  <div class="container">
    <div class="row">
      <div class="d-flex flex-grow-1">
        <div class="flex-grow-1">
          <%= f.input :start_date, as: :date, html5: true%>
        </div>
        <div class="">
          <%= f.input :meetup_time, class:"mr-3"%>
        </div>
      </div>
      <div class="d-flex flex-grow-1">
        <div class="collapse flex-grow-1" id="collapseDateEnd">
          <%= f.input :end_date, as: :date, html5: true%>
        </div>
        <%= f.input :expected_end_time %>
      </div>
    </div>
    <button class="btn btn-link mb-3 p-0"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapseDateEnd"
          aria-expanded="false"
          aria-controls="collapseDateEnd">
      <p class="text-white">+/- End date and time</p>
    </button>
  </div>
  <div class="text-white">
    <%= f.association :activities, as: :check_boxes %>
  </div>
  <%= f.button :submit, class:"btn btn-primary btn-block mt-3" %>
<% end %>
<%# to clear the input field for DateEnd %>
<script>
  document.querySelector('[data-bs-target="#collapseDateEnd"]').onclick = function clearInput(){
    document.querySelector('#trip_end_date').value = "";
  }
</script>
</div>
