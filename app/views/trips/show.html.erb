              <i class="fas fa-user"></i>
            </th>
            <% @trip.invitations.each do |invitation| %>
              <% if invitation.user != @trip.user %>
                <th class="col"><i class="fas fa-user"></i></th>
              <% end %>
            <% end %>
            <th scope="col">Category</th>
            <th scope="col">Label</th>
            <th scope="col">Note</th>
          </tr>
        </thead>
        <tbody>
          <th scope="row">#</th>
          <td>1</td>
          <td>2</td>
          <td>3</td>
        </tbody>
      </table>
