<div class="container-sm">
  <h1 class="font-weight-light py-3 text-center">Upcoming</h1>
  <% @my_trips.each do |trip| %>
    <% if !trip.finished %>
      <div class="card rounded flex-md-row mb-4 shadow mx-auto" style="width: 24rem;">
        <div class="card-body position-relative">
          <% if trip.end_date != nil %>
            <p class="card-text">Planned for <%= trip.start_date %> to <%= trip.end_date %></p>
          <% else %>
            <p class="card-text">Planned for <%= trip.start_date %></p>
          <% end %>
          <h5 class="card-title"><%= link_to trip.description, trip_path(trip), class: "stretched-link text-decoration-none text-dark" %></h5>
          <p><i class="fas fa-map-marker-alt"></i> <%= trip.destination %></p>
          <p class="card-text">
          <% trip.activities.each do |activity| %>
            <span class="badge bg-info"><%= activity.name %></span>
          <% end %>
          </p>
          <p>Currently Going:
            <%= trip.user.email %>
            <% trip.invitations.each do |invitation| %>
              <%= invitation.user.email unless invitation.user == trip.user%>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
  <h1 class="font-weight-light py-3 text-center">Past Trips</h1>
  <% @my_trips.each do |trip| %>
    <% if trip.finished %>
      <div class="card rounded flex-md-row mb-4 shadow mx-auto" style="width: 24rem;">
        <div class="card-body position-relative">
          <% if trip.end_date != nil %>
            <p class="card-text">Planned for <%= trip.start_date %> to <%= trip.end_date %></p>
          <% else %>
            <p class="card-text">Planned for <%= trip.start_date %></p>
          <% end %>
          <p class="card-text">from <%= trip.start_date %> to <%= trip.end_date %></p>
          <h5 class="card-title"><%= link_to trip.description, trip_path(trip), class: "stretched-link text-decoration-none text-dark" %></h5>
          <p><i class="fas fa-map-marker-alt"></i> <%= trip.destination %></p>
          <p class="card-text">
          <% trip.activities.each do |activity| %>
            <span class="badge bg-info"><%= activity.name %></span>
          <% end %>
          </p>
          <p>Went with:
            <%= trip.user.email %>
            <% trip.invitations.each do |invitation| %>
              <%= invitation.user.email unless invitation.user == trip.user%>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>