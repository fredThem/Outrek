<div class="container-sm">
  <h1 class="font-weight-light py-3 text-center"><%= (@trip_next.start_date - Date.today).to_i %> Days Left Until</h1>
    <%= render partial: "trips/card/trip_card", locals: { trip: @trip_next } %>
  <h1 class="font-weight-light py-3 text-center">Upcoming</h1>
    <% @trips_future.each do |trip| %>
      <%= render partial: "trips/card/trip_card", locals: { trip: trip } %>
    <% end %>
  <h1 class="font-weight-light py-3 text-center">Past Trips</h1>
    <% @trips_past.each do |trip| %>
      <%= render partial: "trips/card/trip_card", locals: { trip: trip } %>
    <% end %>

</div>
